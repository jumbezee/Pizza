<h2>Welcome to your CART</h2>

<div id="cart">
		<table class="table table-striped"> 
		<thead> 
			<tr> 
				<th>#</th> 
				<th>Title</th> 
				<th>Price</th> 
				<th>Qty</th> 
			</tr> 
		</thead> 
		<tbody>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each_with_index do |item, i| %>
			<tr> 
				<th scope="row"><%=i + 1%></th> 
					<td><%= item[0].title%></td> 
					<td><%= item[0].price%></td> 
					<td><%= item[1]%></td> 
			</tr> 
			<% total_price += item[0].price * item[1].to_i%>
			<% total_qty += item[1].to_i %>
		<% end %>

			<tr> 
				<th scope="row"></th> 
					<td></td> 
					<td><%= total_price%></td> 
					<td><%= total_qty%></td> 
			</tr> 
		</tbody> 
		</table>

		<form  action="/place_order" method="POST">

		<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />

		<div class="form-group">
			<label>Your name</label>
			<input type="text" name="orderr[name]" class="form-control" placeholder="Your name">
		</div>
		<div class="form-group">
			<label>Your phone</label>
			<input type="text" name="orderr[phone]" class="form-control" placeholder="Your phone">
		</div>
		<div class="form-group">
			<label>Your delivery adress</label>
			<textarea  name="orderr[adress]" class="form-control" placeholder="Your delivery adress"></textarea>
		</div>
		<button type="submit" class="btn btn-success btn-lg">Place this order</button>

		<button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>
		</form>
</div>